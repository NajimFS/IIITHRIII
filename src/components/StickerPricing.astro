    }

    html {
      /* Prevent scrollbar from shifting layout */
      overflow-y: scroll;
      /* Ensure no margin/padding leaks */
      margin: 0;
      padding: 0;
    }

    body {
      margin: 0;
      padding: 0;
      background-color: #0f0f0f;
      color: #f0f0f0;
      font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
