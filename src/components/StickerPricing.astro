      color: #f0f0f0;
      padding: 3rem 1.5rem;
      width: 100%;
      /* Ensure it stretches fully */
      margin: 0;
    }

    .container {
      max-width: 720px;
      margin: 0 auto;
      width: 100%;
    }

    .section-title {
      text-align: center;
      font-size: 1.8rem;
      margin-bottom: 0.75rem;
      color: white;
    }

    .subtitle {
      text-align: center;
      color: #ccc;
      margin-bottom: 2rem;
      font-size: 1.05rem;
    }

    .included-box,
    .order-box {
      background: rgba(255, 255, 255, 0.04);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 12px;
      padding: 1.5rem;
      margin-bottom: 2rem;
    }

    .included-box h3,
    .order-box h3 {
      margin-top: 0;
      color: white;
      font-size: 1.25rem;
    }

    .included-box ul,
    .order-box ol {
      padding-left: 1.25rem;
      margin: 0.75rem 0;
      color: #e0e0e0;
    }

    .included-box li,
    .order-box li {
      margin-bottom: 0.4rem;
    }

    .tax-note {
      margin-top: 1rem;
      font-size: 0.9rem;
      color: #aaa;
    }

    .pricing-table {
      width: 100%;
      border-collapse: collapse;
      margin: 1.5rem 0;
      color: #e0e0e0;
    }

    .pricing-table th,
    .pricing-table td {
      padding: 0.75rem 0.5rem;
      text-align: center;
      border-bottom: 1px solid rgba(255, 255, 255, 0.08);
    }

    .pricing-table th {
      color: #ccc;
      font-weight: 600;
      font-size: 0.95rem;
    }

    .price {
      font-weight: bold;
      color: white;
      display: block;
    }

    small {
      color: #888;
      font-size: 0.85em;
    }

    .table-container {
      overflow-x: auto;
      margin: 2rem 0;
      width: 100%;
    }

    .quote {
      text-align: center;
      font-style: italic;
      color: #ccc;
      margin-top: 2rem;
      font-size: 1.05rem;
      line-height: 1.6;
    }

    .instagram-cta {
      text-align: center;
      margin-top: 2.5rem;
      color: #aaa;
      font-size: 0.95rem;
    }

    .instagram-cta a,
    a {
      color: #ff6b35;
      text-decoration: none;
    }

    a:hover,
    a:focus {
      text-decoration: underline;
    }

    /* Mobile: stack table rows */
    @media (max-width: 600px) {
      .pricing-table,
      .pricing-table tbody,
      .pricing-table tr,
      .pricing-table td {
        display: block;
        width: 100%;
      }

      .pricing-table thead {
        display: none;
      }

      .pricing-table tr {
        margin-bottom: 1.25rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .pricing-table td {
        text-align: left;
        padding-left: 0;
        position: relative;
        padding-top: 0.8rem;
      }

      .pricing-table td:before {
        content: attr(data-label) ": ";
        font-weight: bold;
        color: #ccc;
        display: inline-block;
        width: 100px;
      }
    }
  </style>
</head>
